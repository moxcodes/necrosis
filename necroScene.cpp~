#include "SDL2/SDL.h"
#include "SDL2/SDL_image.h"
#include "SDL2/SDL_ttf.h"
#include <string>
#include <stdio.h>
#include <vector>
#include <math.h>

class necroScene{
  std::vector<necroLayer>* layers;
public:
  necroScene()
  {
    layers=new std::vector<necroLayer>();
  }

  ~necroScene()
  {
    for(std::vector<necroLayer >::iterator it = layers->begin();it != layers->end(); ++it)
	delete (*it);
    delete layers;
  }

  void renderScene(SDL_Renderer* gRenderer)
  {
    for(std::vector<necroLayer >::iterator it = layers->begin();it != layers->end(); ++it)
      it->renderLayer(gRenderer);
  }
}
